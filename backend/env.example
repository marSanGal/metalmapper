# MetalMapper Backend Environment Variables
# Copy this file to .env and update with your values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
# For SQLite (default, no setup needed):
# DATABASE_URL=sqlite:///instance/metalmapper.db

# For PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/metalmapper

# For MySQL:
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/metalmapper

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# SQLAlchemy Debug (set to 'true' to see SQL queries)
SQLALCHEMY_ECHO=false

